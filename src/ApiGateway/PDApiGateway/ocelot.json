{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:4444"
  },
  "Routes": [

    // Authentication APIs

    {
      "UpstreamPathTemplate": "/gw/auth/login",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/login",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3333
        }
      ],
      "SwaggerKey": "Auth"
    },
    {
      "UpstreamPathTemplate": "/gw/auth/registeruser",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/registeruser",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3333
        }
      ],
      "SwaggerKey": "Auth"
    },
    {
      "UpstreamPathTemplate": "/gw/auth/registercurier",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/auth/registercurier",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 3333
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "Admin"
      },
      "SwaggerKey": "Auth"
    },

    // Parcel APIs
    {
      "UpstreamPathTemplate": "/gw/parcel/createorder",
      "UpstreamHttpMethod": [ "POST" ],
      "DownstreamPathTemplate": "/api/parcel/createorder",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 1111
        }
      ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      },
      "RouteClaimsRequirement": {
        "http://schemas.microsoft.com/ws/2008/06/identity/claims/role": "User"
      },
      "SwaggerKey": "Parcel"
    }
  ],
  "SwaggerEndPoints": [
    {
      "Key": "Auth",
      "Config": [
        {
          "Name": "API Auth",
          "Version": "v1",
          "Url": "http://localhost:3333/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "Parcel",
      "Config": [
        {
          "Name": "API Parcel",
          "Version": "v1",
          "Url": "http://localhost:1111/swagger/v1/swagger.json"
        }
      ]
    },
    {
      "Key": "StaffManagement",
      "Config": [
        {
          "Name": "API StaffManagement",
          "Version": "v1",
          "Url": "https://localhost:2222/swagger/v1/swagger.json"
        }
      ]
    }
  ]
}
